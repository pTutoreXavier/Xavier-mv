{% extends 'templates/app.twig' %}
{% block content %}
<h2 class="h2 text-center ">Vos commentaires : </h2>
<table class="table mt-5">
	<thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Commentaire</th>
      <th scope="col">Vidéo</th>
    </tr>
  </thead>
	{% for value in seqsAndComms %}
		<tr>
			<td>{{ loop.index }}</td>
			<td>{{ value.commentaire }}</td>
			<td><a href="{{ path_for('sequence', { idVideo:value.idVideo , idSequence:value.id }) }}">Voir la vidéo</a></td>
		</tr>
	{% endfor %}
</table>
{% endblock content %}